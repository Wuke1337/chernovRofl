<Page x:Class="chernovRofl.Pages.AddEditSalaries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:chernovRofl.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditSalaries">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ФИО" Margin="5"/>
            <TextBox Text="{Binding Workers.FIO}" Margin="5"/>
            <TextBlock Text="Месяц" Margin="5"/>
            <TextBox Text="{Binding Month}" Margin="5"/>
            <TextBlock Text="Среднедневная зарплата" Margin="5"/>
            <TextBox Text="{Binding Salary}" Margin="5"/>
            <TextBlock Text="Количество дней болезни" Margin="5"/>
            <TextBox Text="{Binding DaysIllnes}" Margin="5"/>
            <TextBlock Text="Процент оплаты" Margin="5"/>
            <TextBox Text="{Binding ProcPay}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Cохранить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>
</Page>
