<Page x:Class="chernovRofl.Pages.AddEditWorkers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:chernovRofl.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddEditWorkers">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="ФИО" Margin="5"/>
            <TextBox Text="{Binding FIO}" Margin="5"/>
            <TextBlock Text="Дата рождения" Margin="5"/>
            <TextBox Text="{Binding  DataB, StringFormat=\{0:dd.MM.yyyy\}}" Margin="5"/>
            <Button x:Name="SaveBtn" Content="Coxpанить" Margin="5" Width="150" Height="30" Click="SaveBtn_Click"/>
            <Button x:Name="BackBtn" Content="Отменить" Margin="5" Width="150" Height="30" Click="BackBtn_Click"/>
        </StackPanel>
    </Grid>

</Page>
